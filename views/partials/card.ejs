
    <div class="trending-cards">
        <% events.forEach(function(event) { %>
            <div class="event-card" data-event-id="<%= event._id %>">
                <div class="event-image">
                    <img src="/<%= event.image %>" alt="<%= event.title %>">
                    <div class="price-tag <%= event.pricing === 'free' ? 'free' : 'paid' %>">
                        <%= event.pricing === 'free' ? 'Free' : 'â‚¹' + event.ticketPrice %>
                    </div>
                    <button class="bookmark-btn" data-is-bookmarked="false" onclick="toggleBookmark(this, '<%= event._id %>', '<%= userId %>')">
                        <i class="fas fa-bookmark"></i>
                    </button>
                </div>
                <div class="event-content">
                    <h3 class="event-title"><%= event.title %></h3>
                    <div class="event-description-preview"><%= event.descriptionPreview %></div>
                            <div class="event-description-full" style="display: none;"><%= event.description %></div>
                            <a href="#" class="see-more-link">See more</a>
                    <div class="event-meta">
                        <div class="event-date">
                            <i class="fas fa-calendar"></i>
                            <%= new Date(Date.parse(event.startdateTime)).toLocaleDateString('en-US', {
                                month: 'short',
                                day: 'numeric'
                            }) %>
                            
                        </div>
                        <div class="event-time">
                            <i class="fas fa-clock"></i>
                            <%= new Date(event.startdateTime).toLocaleTimeString('en-US', {
                                hour: '2-digit',
                                minute: '2-digit'
                            }) %>
                        </div>
                    </div>
                    <div class="event-tags">
                        <% event.keywords.forEach(function(keyword) { %>
                            <span class="tag"><%= keyword %></span>
                        <% }); %>
                    </div>
                    <a href="<%= event.registrationLink %>" class="register-btn">Register Now</a>
                </div>
            </div>
        <% }); %>
    </div>
