<!DOCTYPE html>
<html>
<head>
    <!-- <title>Enhanced Navbar</title> -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-left">
                <a href="/" class="brand">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                    </svg>
                    TechyVents
                </a>
                <div class="nav-links">
                    <% if(locals.isAuthenticated) { %>
                    <a href="/find-events" class="nav-link">Find Events</a>
                    <a href="/create-event" class="nav-link">Create Events</a>
                    <% } %>
                    <a href="/aboutUs" class="nav-link">About Us</a>
                    <div class="dropdown">
                        <a href="#" class="nav-link">Community</a>
                        <div class="dropdown-content">
                            <a href="/forums" class="dropdown-item">Forums</a>
                            <a href="/partners" class="dropdown-item">Partners</a>
                            <a href="/sponsors" class="dropdown-item">Sponsors</a>
                        </div>
                    </div>
                    <a href="/faq" class="nav-link">FAQ</a>
                </div>
            </div>
            <div class="nav-right">
                <% if(locals.isAuthenticated) { %>
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="search" placeholder="Search events..." class="search-input">
                </div>
                <div class="user-menu">
                    <div class="user-button">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="user-dropdown">
                        <a href="/profile" class="user-dropdown-item">
                            <i class="fas fa-user-circle"></i>
                            Profile
                        </a>
                        <a href="/my-events" class="user-dropdown-item">
                            <i class="fas fa-calendar-alt"></i>
                            My Events
                        </a>
                        <a href="/settings" class="user-dropdown-item">
                            <i class="fas fa-cog"></i>
                            Settings
                        </a>
                        <div class="divider"></div>
                        <form action="/auth/logout" method="POST">
                            <button type="submit" class="user-dropdown-item" style="width: 100%; border: none; background: none; cursor: pointer; text-align: left;">
                                <i class="fas fa-sign-out-alt"></i>
                                Logout
                            </button>
                        </form>
                    </div>
                </div>
                <% } else { %>
                <div class="auth-buttons">
                    <a href="/auth/login" class="auth-link login">Log In</a>
                    <a href="/auth/signup" class="auth-link signup">Sign Up</a>
                </div>
                <% } %>
            </div>
        </div>
    </nav>
</body>
</html>