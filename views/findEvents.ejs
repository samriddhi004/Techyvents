<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('partials/navbar') %>

</head>
<body>
    <div class="container">
        <div class="row">
          <% events.forEach(function(event) { %>
            <div class="col-md-4">
              <div class="card mb-4">
                <!-- <a href="/events/<%= event._id %>">  -->
                <img src="<%= event.imageUrl %>" class="card-img-top" alt="<%= event.title %>">
                <div class="card-body">
                  <h5 class="card-title"><%= event.title %></h5>
                  <p class="card-text"><%= event.description %></p>
                  <p><strong>Category:</strong> <%= event.category %></p>
                  <p><strong>Date:</strong> <%= event.startdateTime %> - <%= event.enddateTime %></p>
                  <p><strong>Pricing:</strong> <%= event.pricing === 'paid' ? '$' + event.ticketPrice : 'Free' %></p>
                  <p><strong>Keywords:</strong> <%= event.keywords.join(', ') %></p>
                  <a href="<%= event.registrationLink %>" class="btn btn-primary">Register</a>
                </div>
                <!-- </a> -->
              </div>
            </div>
          <% }); %>
        </div>
      </div>
      

</body>
</html>

