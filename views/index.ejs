        <!-- Trending Events Section -->
        <div class="trending-section">
            <div class="container">
                <h2>Trending Events</h2>
                <div class="trending-cards">
                    <% events.forEach(function(event) { %>
                        <div class="event-card">
                            <div class="event-image">
                                <img src="/<%= event.image %>" alt="<%= event.title %>">
                            </div>
                            <div class="event-content">
                                <h3><%= event.title %></h3>
                                <p><%= event.description %></p>
                                <div class="event-tags">
                                    <% event.keywords.forEach(function(keyword) { %>
                                        <span><%= keyword %></span>
                                    <% }); %>
                                </div>
                                <div class="event-info">
                                    <span class="event-date"><%= new Date(event.startdateTime).toLocaleDateString() %> - <%= new Date(event.enddateTime).toLocaleDateString() %></span>
                                    <span class="event-price"><%= event.pricing === 'paid' ? 'Rs ' + event.ticketPrice : 'Free' %></span>
                                </div>
                                <a href="<%= event.registrationLink %>" class="register-btn">Register</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
