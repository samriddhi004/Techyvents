<!-- public/index.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TechyVents</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/card.css">
    <link rel="stylesheet" href="/stylesheets/index.css">
    
    <script src="/javascripts/bookmarks.js"></script>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="hero-section">
        <div class="container">
            <!-- Hero Text Section -->
            <div class="hero-text">
                <h1>TechyVents</h1>
                <p>Your centralized access to all tech events</p>
            </div>

            <!-- Categories Section -->
            <div class="categories">
                <a href="/events?keywords=Coding,AI/ML">
                    <div class="category-item">
                        <div class="icon-circle">
                            <i class="fas fa-code"></i>
                        </div>
                        <span>Coding</span>
                    </div>
                </a>
                <a href="/events?keywords=AI/ML,Networks">
                    <div class="category-item">
                        <div class="icon-circle">
                            <i class="fas fa-robot"></i>
                        </div>
                        <span>AI/ML</span>
                    </div>
                </a>
                <a href="/events?keywords=Networks,Web Dev">
                    <div class="category-item">
                        <div class="icon-circle">
                            <i class="fas fa-network-wired"></i>
                        </div>
                        <span>Networks</span>
                    </div>
                </a>
                <a href="/events?keywords=Web Dev,Hardware">
                    <div class="category-item">
                        <div class="icon-circle">
                            <i class="fas fa-laptop-code"></i>
                        </div>
                        <span>Web Dev</span>
                    </div>
                </a>
                <a href="/events?keywords=Hardware,Data Science">
                    <div class="category-item">
                        <div class="icon-circle">
                            <i class="fas fa-microchip"></i>
                        </div>
                        <span>Hardware</span>
                    </div>
                </a>
                <a href="/events?keywords=Data Science,Cloud">
                    <div class="category-item">
                        <div class="icon-circle">
                            <i class="fas fa-database"></i>
                        </div>
                        <span>Data Science</span>
                    </div>
                </a>
                <a href="/events?keywords=Cloud,Community">
                    <div class="category-item">
                        <div class="icon-circle">
                            <i class="fas fa-cloud"></i>
                        </div>
                        <span>Cloud</span>
                    </div>
                </a>
                <a href="/events?keywords=Community,Coding">
                    <div class="category-item">
                        <div class="icon-circle">
                            <i class="fas fa-users"></i>
                        </div>
                        <span>Community</span>
                    </div>
                </a>
            </div>
            
            

        <div class="trending-section">
            <div class="container">
                <h2 class="section-title">Trending Events</h2>
                <%- include('partials/card') %>
            </div>
        </div>
    </body>

</html>

